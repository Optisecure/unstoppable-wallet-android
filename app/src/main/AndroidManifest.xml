<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.horizontalsystems.indexwallet">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <application
        android:name="io.horizontalsystems.indexwallet.core.App"
        android:allowBackup="false"
        android:icon="@mipmap/bitcoin_launcher"
        android:label="@string/App_Name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/bitcoin_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppTheme.DayNight"
        tools:ignore="GoogleAppIndexingWarning">
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notification_icon" />

        <activity android:name="io.horizontalsystems.indexwallet.modules.tor.TorConnectionActivity"
                  android:launchMode="singleTask"/>
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.launcher.LauncherActivity"
            android:theme="@style/LauncherTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.addressformat.AddressFormatSettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.backup.BackupActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.backup.words.BackupWordsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.createwallet.view.CreateWalletActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.main.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.send.SendActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.restore.words.RestoreWordsActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.qrscanner.QRScannerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.fulltransactioninfo.views.FullTransactionInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.fulltransactioninfo.dataprovider.DataProviderSettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.languageswitcher.LanguageSettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.settings.security.SecuritySettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.settings.AboutSettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.notifications.NotificationsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.contact.ContactActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.lockscreen.LockScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.pin.PinActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.currencyswitcher.CurrencySwitcherActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.managecoins.views.ManageWalletsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.settings.managekeys.views.ManageKeysActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.restore.RestoreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.intro.IntroActivity"
            android:theme="@style/OnboardingTheme"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.welcome.WelcomeActivity"
            android:theme="@style/OnboardingTheme"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.restore.eos.RestoreEosActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.keystore.KeyStoreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.backup.eos.BackupEosActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.contact.appstatus.AppStatusActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.settings.experimental.ExperimentalFeaturesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.settings.experimental.bitcoinhodling.BitcoinHodlingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.info.InfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.restore.restorecoins.RestoreCoinsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.ratechart.RateChartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.settings.security.privacy.PrivacySettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.settings.security.privacy.PrivacySettingsInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.addErc20token.AddErc20TokenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.horizontalsystems.indexwallet.modules.guideview.GuideActivity"
            android:screenOrientation="portrait"/>

        <service
            android:name="io.horizontalsystems.indexwallet.core.fcm.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>